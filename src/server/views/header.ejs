<head>
    <meta charset="UTF-8">
    <title>Product Catalog</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="/js/app.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      body {
        padding: 30px 0 0;
      }

      .iterations table {
        min-width: 1000px;
      }
      .iterations tbody tr:nth-child(odd) {
        background-color: #ccc;
      }
      
      .iterations th {
        width: 120px;
      }
      .iterations th.time {
        width: 300px;
      }

      .items {
        margin-left: 5px;
      }
      .items th {
        width: 200px;
      }
      .items .price {
        width: 70px;
      }
      .items .price input {
        width: 45px;
      }
      .items .thumbnail {
        width: 120px;
      }
      .item-delete-button {
        background: #ccc;
        margin-left: 3px;
        cursor: pointer;
      }
      .items .is-new, .items .discount, .items .ago {
        padding: 2px;
      }
      .item-delete-button:hover {
        color: #444;
      }

      .items .sets {
        width: 350px;
      }

      .items .sets ul {
        padding: 0;
        margin: 0;
      }

      table {
        margin-bottom: 20px;
      }

      ul {
        list-style-type: none;
        padding-left: 10px;
        padding-right: 10px;
      }
      input.bad-expression-value {
        width: 300px;
      }
      input.pass {
        color: green;
      }
      input.fail {
        color: red;
      }
    </style>
</head>
